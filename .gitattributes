# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyw text eol=lf
*.pyx text eol=lf
*.pxd text eol=lf

# Django templates
*.html text eol=lf
*.htm text eol=lf
*.xml text eol=lf
*.json text eol=lf

# CSS and JavaScript
*.css text eol=lf
*.scss text eol=lf
*.sass text eol=lf
*.js text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Config files
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf
*.config text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf
README text eol=lf
LICENSE text eol=lf

# Images
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.ico binary
*.svg text

# Archives
*.zip binary
*.tar binary
*.gz binary
*.rar binary

# Fonts
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
*.eot binary

# Database
*.sqlite binary
*.sqlite3 binary
*.db binary

# Python compiled files
*.pyc binary
*.pyo binary
*.pyd binary